{
  "name": "sabap",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run build:utils && pnpm run build:frontend && pnpm run build:backend",
    "build:utils": "pnpm --filter @sabap/utils build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "start": "pnpm --filter backend start:prod",
    "test": "pnpm run --parallel test",
    "lint": "pnpm run --parallel lint",
    "deploy": "railway up",
    "logs": "railway logs",
    "health": "curl https://sabapp.com/health"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/next-auth": "^3.15.0",
    "bcrypt": "^6.0.0",
    "next-auth": "^4.24.11"
  }
}