{
  "name": "sabap",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --filter=frontend build && pnpm run --filter=backend build",
    "build:render": "pnpm install --frozen-lockfile && cd apps/frontend && pnpm build && cd ../backend && pnpm build",
    "start": "pnpm run --parallel start",
    "start:prod": "cd apps/backend && pnpm start:prod",
    "lint": "pnpm run --parallel lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm run --parallel clean",
    "build:prod": "bash scripts/build.sh",
    "start:prod:script": "bash scripts/start.sh"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=8.0.0"
  }
}